<%- include('../partials/adminHeader') %>

            <div class="container-xxl flex-grow-1 container-p-y">
              
              <div class="card mb-4">
                <div class="card-body">
                    <form method="post" action="/admin/add-category">
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Category name</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="basic-default-name" placeholder="product name" name="name"/>
                        </div>
                      </div>
    
                      <div class="row justify-content-end">
                        <div class="col-sm-10">
                          <button type="submit" class="btn btn-primary">Add Category</button>
                        </div>
                      </div>

                      <div style="margin-top: 5px; text-align: center; font-family: 'Poppins',sans-serif;">
                        <% 
                        if(typeof message !== "undefined"){
                           %>
                             <span style="color: green; font-weight: bold;"><%= message %></span>
                           <%
                         }
                        %>
                        <% 
                        if(typeof error !== "undefined"){
                           %>
                             <span style="color:#f00; font-weight: bold;"><%= error %></span>
                           <%
                         }
                        %>
                    </div>

                    </form>
                  </div>
              </div>

              <a class="btn btn-primary" href="/admin/category" role="button">Back to category</a>

            </div>
            <!-- / Content -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

