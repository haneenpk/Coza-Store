                <div data-i18n="Analytics">Order</div>
              </a>
            </li>

            <!-- Coupons -->
            <li class="menu-item active">
              <a href="/admin/coupons" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div data-i18n="Analytics">Coupons</div>
              </a>
            </li>

            <!-- Logout -->
            <li class="menu-item">
              <a href="/admin/Logout" class="menu-link">
                <div data-i18n="Analytics">Logout</div>
              </a>
            </li>

          </ul>
        </aside>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body">
                        <div class="d-flex justify-content-between flex-wrap">
                          <h4 class="card-title">Coupons</h4>
                          <div class="d-flex justify-content-between">
                            <% if (foundCoupons.length > 0) { %>
                                <select name="status" class="mr-3" id="search-input">
                                    <option>Select Status</option>
                                    <option value="1">Active</option>
                                    <option value="0">Deactivate</option>
                                </select>
                            <% } %>
                            <a href="/admin/new-coupon" class="btn btn-primary">New Coupon</a>
                          </div>
                        </div>
                        <div class="table-responsive">
                          <table class="table table-striped">
                            <thead>
                              <tr>
                                <th>
                                  Code
                                </th>
                                <th>
                                  Discount Type
                                </th>
                                <th>
                                  Expiration Date
                                </th>
                                <th>
                                  Min. Purhcase Amount
                                </th>
                                <th>
                                  Usage Limit/<br>
                                  Used Count
                                </th>
                                <th>
                                  Action
                                </th>
                              </tr>
                            </thead>
                            <tbody id="search-results">
                              <% if (!foundCoupons.length) { %>
                              <tr>
                                <td colspan="7">
                                  No coupons found.
                                </td>
                              </tr>
                              <% } else { %>
                              <% foundCoupons.forEach((coupon) => { %>
                              <tr>
                                <td class="py-1">
                                  <%= coupon.code %><br>
                                </td>
                                <td>
                                  <% if (coupon.discountType === 'percentage') { %>
                                  Percentage (<%= coupon.discountAmount %>%)
                                  <% } else { %>
                                  Fixed Amount (<%= coupon.discountAmount %>/-)
                                  <% } %>
                                </td>
                                <td>
                                  <%= coupon.expirationDate.toLocaleDateString() %>
                                </td>
                                <td>
                                  <%= coupon.minimumPurchaseAmount %>
                                </td>
                                <td>
                                  <%= coupon.usageLimit %> /
                                  <%= coupon.usedCount %>
                                </td>
                                <td>
                                  <form action="/admin/coupons/action/<%= coupon._id %>?_method=PATCH" method="post">
                                    <input type="hidden" name="coupon" value="<%= coupon._id %>">
                                    <% if (coupon.isActive) { %>
                                    <input type="hidden" name="state" value="1">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                      Deactivate
                                    </button>
                                    <% } else { %>
                                    <input type="hidden" name="state" value="">
                                    <button type="submit" class="btn btn-warning btn-sm">
                                      Activate
                                    </button>
                                    <% } %>
                                  </form>
                                </td>
                              </tr>
                              <% }) %>
                              <% } %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
          
                  <% if (foundCoupons.length) { %>
                  <div class="container">
                    <div class="d-flex justify-content-end">
                      <nav aria-label="Page navigation">
                        <ul class="pagination">
                          <% if (currentPage > 1) { %>
                          <li class="page-item">
                            <a class="page-link" href="/admin/coupons/<%= currentPage - 1 %>" aria-label="Previous">
                              <span aria-hidden="true">&laquo;</span>
                              <span class="sr-only">Previous</span>
                            </a>
                          </li>
                          <% } %>
                          <% for (let i=1; i <= totalPages; i++) { %>
                          <% if (i === currentPage) { %>
                          <li class="page-item">
                            <a class="page-link bg-primary text-light" href="/admin/coupons/<%= i %>"><%= i %></a>
                          </li>
                          <% } else { %>
                          <li class="page-item">
                            <a class="page-link" href="/admin/coupons/<%= i %>"><%= i %></a>
                          </li>
                          <% } %>
                          <% } %>
                          <% if (currentPage < totalPages) { %>
                          <li class="page-item">
                            <a class="page-link" href="/admin/coupons/<%= currentPage + 1 %>" aria-label="Next">
                              <span aria-hidden="true">&raquo;</span>
                              <span class="sr-only">Next</span>
                            </a>
                          </li>
                          <% } %>
                        </ul>
