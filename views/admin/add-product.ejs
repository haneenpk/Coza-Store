<script>
  function validateNumberInput(input) {
    input.value = input.value.replace(/\D/g, ''); // Allow only digits (0-9)

    // Remove leading zeros
    input.value = input.value.replace(/^0+/, '');
  }

  function validateForm() {
    const productName = document.getElementById("productName").value;
    const productBrand = document.getElementById("productBrand").value;
    const productDescription = document.getElementById("productDescription").value;
    const productSizes = document.getElementById("productSizes").value;

    // Reset the error message
    displayError("", "error-message");

    // Check if any field is only whitespace
    if (isWhitespace(productName) || isWhitespace(productBrand) || isWhitespace(productDescription) || isWhitespace(productSizes)) {
      displayError("Product Name, Brand, Description, and Sizes should contain characters only.");
      return false;
    }

    // Validate characters using regex
    const charRegex = /^[A-Za-z\s]+$/; // Allow letters and spaces
    if (!charRegex.test(productName) || !charRegex.test(productBrand)) {
      displayError("Product Name and Brand should contain characters only.");
      return false;
    }

    // Validate description and size fields allowing commas, full stops, and spaces
    const descSizeRegex = /^[A-Za-z0-9,.\s]+$/;
    if (!descSizeRegex.test(productDescription) || !descSizeRegex.test(productSizes)) {
      displayError("Description and Sizes should contain letters, numbers, commas, full stops, and spaces only.");
      return false;
    }

    return true;
  }

  function isWhitespace(str) {
    return /^\s*$/.test(str);
  }

  function displayError(message, elementId = "error-message") {
    const errorElement = document.getElementById(elementId);
    if (errorElement) {
      errorElement.innerHTML = message;
    }
  }
</script>

</body>

</html>