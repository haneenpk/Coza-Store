  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

        <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
          <div class="app-brand demo">
            <a href="/admin/dashboard" class="app-brand-link">

              <span class="app-brand-text demo menu-text fw-bolder ms-2">Coza store</span>
            </a>

            <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
              <i class="bx bx-chevron-left bx-sm align-middle"></i>
            </a>
          </div>

          <div class="menu-inner-shadow"></div>

          <ul class="menu-inner py-1">
            <!-- Dashboard -->
            <li class="menu-item">
              <a href="/admin/dashboard" class="menu-link">
                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                <div data-i18n="Analytics">Dashboard</div>
              </a>
            </li>

            <!-- Users -->
            <li class="menu-item">
              <a href="/admin/users" class="menu-link">
                <i class="menu-icon tf-icons bx bx-user-circle"></i>
                <div data-i18n="Analytics">Users</div>
              </a>
            </li>

            <!-- Product -->
            <li class="menu-item">
              <a href="/admin/product" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div data-i18n="Analytics">Product</div>
              </a>
            </li>

            <!-- Category -->
            <li class="menu-item">
              <a href="/admin/category" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div data-i18n="Analytics">Category</div>
              </a>
            </li>

            <!-- Order -->
            <li class="menu-item active">
              <a href="/admin/order" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div data-i18n="Analytics">Order</div>
              </a>
            </li>

            <!-- Logout -->
            <li class="menu-item">
              <a href="/admin/Logout" class="menu-link">
                <div data-i18n="Analytics">Logout</div>
              </a>
            </li>

          </ul>
        </aside>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">

                <a href="/admin/order"><button style="margin-top: 20px;" type="button" class="btn btn-primary btn-lg mb-3">Back to order</button></a> 

                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                      
                        <div class="d-flex justify-content-between" style="margin-left: 25px; margin-top: 25px;">
                          <h4 class="card-title">Return Requests</h4>
                        </div>
                        <div class="table-responsive">
                          <table class="table table-striped">
                            <thead>
                              <tr>
                                <th>
                                  User
                                </th>
                                <th>
                                  Details
                                </th>
                                <th>
                                  Return To
                                </th>
                                <th>
                                  Reason and Condition
                                </th>
                                <th>
                                  Actions
                                </th>
                              </tr>
                            </thead>
                            <tbody>
                              <% if (!returnRequests.length) { %>
                              <tr>
                                <td colspan="5">No requests found.</td>
                              </tr>
                              <% } else { %>
                              <% returnRequests.forEach((request)=> { %>
                              <tr>
                                <td>
                                  <%= request.user.username %><br>
                                  <p class="text-dark">
                                    <%= request.user.email %>
                                  </p><br>
                                  <%= request.user.mobile %>
                                </td>
                                <td>
                                  <div>
                                    <div class="border-bottom mb-3">
                                      <span class="h6 text-uppercase">
                                        <%= request.product.name %>
                                      </span><br>
                                      Total price: <%= request.totalPrice %> <br>
                                      Quantity: <%= request.quantity %> <br>
                                    </div>
                                    Requested Date: <%= request.createdAt.toLocaleDateString() %>
                                  </div>
                                </td>
                                <td>
                                  <%= request.order.deliveryAddress.city %>,
                                  <%= request.order.deliveryAddress.pincode%>,
                                  <%= request.order.deliveryAddress.district %>,
                                  <%= request.order.deliveryAddress.state %>,<br>
                                  <%= request.order.deliveryAddress.country %>
                                </td>
                                <td>
                                  <%= request.reason %>,<br>
                                  <%= request.condition %>
                                </td>
                                <td>
                                  <div class="d-flex justify-content-between">
                                    <% if (request.status==="Completed" ) { %>
                                    <p class="text-success font-weight-bolder">Completed</p>
                                    <% } else { %>
                                    <div class="btn-group">
                                        <button type="button"
                                            class="btn btn-danger dropdown-toggle dropdown-toggle-split"
                                            data-toggle="dropdown"
                                            aria-haspopup="true"
                                            aria-expanded="false">
                                            <%= request.status %> 
                                        </button>
                                        <div class="dropdown-menu">
                                            <form action="/admin/return-requests" method="post">
                                                <input type="hidden" name="action" value="approve">
                                                <input type="hidden" name="request" value="<%= request._id %>">
                                                <input type="hidden" name="order" value="<%= request.order._id %>">
                                                <input type="hidden" name="product" value="<%= request.product._id %>">
                                                <button type="submit" class="dropdown-item text-warning">
                                                  Approve
                                                </button>
                                            </form>
                                            <form action="/admin/return-requests" method="post" class="ml-1" id="action-form">
                                                <input type="hidden" name="action" value="reject">
                                                <input type="hidden" name="request" value="<%= request._id %>">
                                                <input type="hidden" name="order" value="<%= request.order._id %>">
                                                <input type="hidden" name="product" value="<%= request.product._id %>">
                                                <button type="submit" class="dropdown-item text-danger">
                                                  Reject
                                                </button>
                                            </form>
                                            <form action="/admin/return-requests" method="post" class="ml-1" id="action-form">
                                                <input type="hidden" name="action" value="Completed">
                                                <input type="hidden" name="request" value="<%= request._id %>">
                                                <input type="hidden" name="order" value="<%= request.order._id %>">
                                                <input type="hidden" name="product" value="<%= request.product._id %>">
                                                <button type="submit" class="dropdown-item text-success">
                                                  Completed
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                                  </div>
                                </td>
                              </tr>
                              <% }) %>
                              <% } %>
                            </tbody>
                          </table>
                        </div>
                      
                    </div>
                </div>
            </div>
            <!-- / Content -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
