  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

        <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
          <div class="app-brand demo">
            <a href="/admin/dashboard" class="app-brand-link">

              <span class="app-brand-text demo menu-text fw-bolder ms-2">Coza store</span>
            </a>

            <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
              <i class="bx bx-chevron-left bx-sm align-middle"></i>
            </a>
          </div>

          <div class="menu-inner-shadow"></div>

          <ul class="menu-inner py-1">
            <!-- Dashboard -->
            <li class="menu-item">
              <a href="/admin/dashboard" class="menu-link">
                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                <div data-i18n="Analytics">Dashboard</div>
              </a>
            </li>

            <!-- Users -->
            <li class="menu-item">
              <a href="/admin/users" class="menu-link">
                <i class="menu-icon tf-icons bx bx-user-circle"></i>
                <div data-i18n="Analytics">Users</div>
              </a>
            </li>

            <!-- Product -->
            <li class="menu-item">
              <a href="/admin/product" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div data-i18n="Analytics">Product</div>
              </a>
            </li>

            <!-- Category -->
            <li class="menu-item">
              <a href="/admin/category" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div data-i18n="Analytics">Category</div>
              </a>
            </li>

            <!-- Order -->
            <li class="menu-item active">
              <a href="/admin/order" class="menu-link">
                <i class="menu-icon tf-icons bx bx-collection"></i>
                <div data-i18n="Analytics">Order</div>
              </a>
            </li>

            <!-- Logout -->
            <li class="menu-item">
              <a href="/admin/Logout" class="menu-link">
                <div data-i18n="Analytics">Logout</div>
              </a>
            </li>

          </ul>
        </aside>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">

              <form action="/admin/order" id="search">
                
                <!-- Status filter dropdown -->
                <select name="status" class="form-select">
                    <option value="">All Status</option>
                    <option value="Processing">Processing</option>
                    <option value="Shipped">Shipped</option>
                    <option value="Delivered">Delivered</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            
                <button type="submit" style="margin-top: 10px;" class="btn btn-primary">Apply Filters</button>
            </form>

              <!-- Basic Bootstrap Table -->
              <div class="card" style="margin-top: 20px;">
                <a href="/admin/return-requests" style="margin-left: 25px; margin-top: 20px;">View Retuen Request</a>
                <h5 class="card-header" style="display: inline;">Orders</h5>

                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Customer</th>
                        <th>Products <br> name & quantity</th>
                        <th>Address</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Payment Option</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      <%
                         if (orders.length > 0) {
                            for (let i = 0; i < orders.length; i++) {
                              %>
                               <tr>
                                 <td><%= orders[i].user.username %><br><%= orders[i].user.email %></td>
                                 <td>
                                    <% for ( let j = 0; j < orders[i].products.length; j++ ) { %>
                                      <%= orders[i].products[j].product.name %> : <%= orders[i].products[j].quantity %><br>
                                    <% } %>
                                </td>
                                 <td><%= orders[i].deliveryAddress.name %>,<br>
                                    <%= orders[i].deliveryAddress.mobile %>,
                                    <%= orders[i].deliveryAddress.pincode %>,<br>
                                    <%= orders[i].deliveryAddress.address %>,<br>
                                    <%= orders[i].deliveryAddress.city %>,
                                    <%= orders[i].deliveryAddress.district %>,<br>
                                    <%= orders[i].deliveryAddress.state %>,
                                    <%= orders[i].deliveryAddress.country %>
                                 </td>
                                 <td>$<%= orders[i].totalAmount %></td>
                                 <td>
                                    <% if (orders[i].status === "Cancelled"){ %>
                                        <h6 class="text-danger">Canceled</h6>
                                    <% } else if (orders[i].status === "Delivered"){ %>
                                        <h6 class="text-success">Delivered</h6>
                                    <% } else { %>
                                        <div class="btn-group">
                                            <button type="button"
                                                class="btn btn-danger dropdown-toggle dropdown-toggle-split"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                <%= orders[i].status %> 
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item"
                                                    href="/admin/order/action-update?action=Processing&orderId=<%= orders[i]._id %>">Processing</a>
                                                <a class="dropdown-item"
                                                    href="/admin/order/action-update?action=Shipped&orderId=<%= orders[i]._id %>">Shipped</a>
                                                <a class="dropdown-item"
                                                    href="/admin/order/action-update?action=Delivered&orderId=<%= orders[i]._id %>">Delivered</a>
                                                <a class="dropdown-item"
                                                    href="/admin/order-cancel?action=Cancelled&orderId=<%= orders[i]._id %>">Cancel order</a>
                                            </div>
                                        </div>
                                    <%}%>
                                 </td>
                                 <td><%= orders[i].paymentMethod %></td>
                               </tr>
                              <%          
                            }
                         } else {
                           %>
                            <tr>
                              <td colspan="6">Products Not Found</td>
                            </tr>
                           <%
                         }
                      %>
                      <!-- Add more rows as needed -->
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->

              <!-- Pagination controls -->
              <div class="pagination" style="margin-top: 15px;">

                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %>" class="page-link"><%= i %></a>
                  <% } %>

              </div>



            </div>
            <!-- / Content -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
