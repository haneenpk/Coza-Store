  <style>
    /* The Modal (background) */
    .modal {
      display: none;
      position: fixed;
      z-index: 10000;
      padding-top: 50px;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
    }

    /* Modal Content (image) */
    .modal img {
      display: block;
      margin: 0 auto;
      max-width: 80%;
      max-height: 80%;
    }

    /* Zoomed Image */
    .image-zoom {
      overflow: hidden;
      width: 120%;
      height: 105%;
    }

    .image-zoom img {
      transform: scale(1);
      transition: transform 0.3s ease;
      /* Add a smooth transition */
      cursor: pointer;
      /* Change cursor to indicate clickability */
      margin-left: 26%;
    }

    /* Zoomed-in style on click */
    .image-zoom img.zoomed {
      transform: scale(1.2);
      /* Adjust the scale factor as needed */
    }

    /* Close Button */
    .close-button {
      background-color: #4d4d4d;
      position: absolute;
      top: 20px;
      right: 20px;
      height: 45px;
      width: 43px;
      padding: 5px 10px;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      z-index: 10001;
    }

    @media (min-width: 992px) {
      .profile-picture {
        max-width: 200px;
        max-height: 200px;
        margin-left: -55px;
      }

      .mainSec {
