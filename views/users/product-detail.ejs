<%- include('../partials/userHeader') %>

<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60" style="margin-top: -40px;">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-7 p-b-30">
        <div class="p-l-25 p-r-30 p-lr-0-lg">
          <div class="wrap-slick3 flex-sb flex-w">
            <div class="wrap-slick3-dots"></div>
            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

            <div class="slick3 gallery-lb">
              <% products.images.forEach(img=> { %>
              <div class="item-slick3" data-thumb="images/product-detail-01.jpg">
                <div class="wrap-pic-w pos-relative">
                  <img src="<%= img %>" alt="IMG-PRODUCT" onclick="openModal('<%= img %>')">
                </div>

              </div>
              <% }) %>
            </div>
            <!-- for display and zoom image -->
            <div id="imageModal" class="modal">
              <button id="closeButton" class="close-button">
                <span style="font-weight: bold; font-size: 25px;">X</span>
              </button>
              <div class="image-zoom" id="zoomContainer">
                <img src="" id="modalImage" alt="Image">
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-5 p-b-30">
        <div class="p-r-50 p-t-5 p-lr-0-lg">
          <h4 class="mtext-105 cl2 js-name-detail p-b-14">
            <%= products.name %>
          </h4>

          <span class="mtext-106 cl2">
            ₹<%= products.price %>
          </span>

          <p class="stext-102 cl3 p-t-23">
            <%= products.description%>
          </p>
          <% if(products.stock === 0) { %>
          <h4 class="mtext-105 cl2 js-name-detail p-b-14" style="margin-top: 10px; color: red;">
            Out of stock
          </h4>
          <% }else{ %>

          <p class="stext-102 cl3 p-t-23">
            <span class="mtext-80 cl2">
              Availability: <%= products.stock%>
            </span>
          </p>

          <!--  -->
          <% if( message === "") { %>
          <div style="margin-top: 20px;">
            <a class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail" style="margin-top: 10px;" href="/addToCart?id=<%= products._id %>">
              Add to cart
            </a>
          </div>
          <div style="margin-top: 10px;">
            <a class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail" style="margin-top: 8px;" href="/addWhishlist?id=<%= products._id %>">
              Add to wishlist
            </a>
          </div>
          <% } else { %>
          <div style="margin-top: 20px;">
            <a class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15" style="margin-top: 10px;" href="/shopingCart">
              Go to cart
            </a>
          </div>
          <div style="margin-top: 10px;">
            <a class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15" style="margin-top: 10px;" href="/shop">
              Continue to shop
            </a>
          </div>
          <% } %>
          <% } %>
        </div>
      </div>
    </div>

    <% if(products.rating.length > 0) { %>
    <!-- Review Section -->
    <div class="row">
      <div class="col-md-12">
        <h4 class="mtext-105 cl2 p-b-10">Customer Reviews</h4>

        <% for(let i=0; i<products.rating.length; i++) { %>

        <!-- Dummy Review 1 -->
        <div class="review mt-3">
          <div class="d-flex align-items-center">
            <div class="text-warning" style="font-size: 1.3em;">
              <% for(let j=0; j<5; j++) { %>
              <% if(products.rating[i].rate > j) { %>
              ★
              <% } else { %>
              ☆
              <% } %>
              <% } %>
              <!-- Insert yellow star icons based on user rating -->
            </div>
            <span class="customer-name ml-2">customer : <%= products.rating[i].customer.username %></span>
          </div>
          <p class="review-text"><%= products.rating[i].review %></p>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>
</section>

<%- include('../partials/userFooter') %>

