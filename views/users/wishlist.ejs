<%- include('../partials/userHeader') %>

<!-- Shoping Cart -->
<div class="container bg0 p-t-75 p-b-85">
  <div class="row">
    <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
      <div class="m-l-25 m-r--38 m-lr-0-xl">
        <div class="wrap-table-shopping-cart">
          <table class="table-shopping-cart">
            <tr class="table_head">
              <th class="column-1">Product</th>
              <th class="column-2"></th>
              <th class="column-3">Price</th>
            </tr>

            <% if( userData.wishlist.length > 0 ) { %>
            <% for( let i=0; i<displayedWishlistItems.length; i++ ) { %>
            <tr class="table_row">
              <td class="column-1">
                <a href="/delete-whishlist?productId=<%= displayedWishlistItems[i]._id %>">
                  <div class="how-itemcart1">
                    <img src="<%= displayedWishlistItems[i].images[0] %>" alt="IMG">
                  </div>
                </a>
              </td>
              <td class="column-2">
                <a href="/productDetail?id=<%= displayedWishlistItems[i]._id %>" style="color: #555;">
                  <%= userData.wishlist[i].name %>
                </a>
              </td>
              <td class="column-3">$<%= displayedWishlistItems[i].price %></td>
            </tr>
            <% } %>
            <% } else { %>
            <tr class="table_row">
              <td class="column-1">No items added</td>
            </tr>
            <% } %>

          </table>
        </div>
        <!-- Pagination controls -->

        <div class="pagination mt-3">
          <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>" class="page-link"><%= i %></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/userFooter') %>

<!-- Back to top -->
<div class="btn-back-to-top" id="myBtn">
  <span class="symbol-btn-back-to-top">
    <i class="zmdi zmdi-chevron-up"></i>
  </span>
</div>

