<%- include('../partials/userHeader') %>

<section class="bg0 p-t-75 p-b-120">
    <div class="container">
        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold mb-4">Edit profile</h4>

            <!-- Basic Layout & Basic with Icons -->
            <div class="row">
              <!-- Basic Layout -->
              <div class="col-xxl">
                <a class="btn btn-primary" href="/profile" role="button">Back to Profile</a>
                <div class="card mb-4" style="margin-top: 20px;">

                  <div style="margin-top: 5px; text-align: center; font-family: 'Poppins',sans-serif;">
                    <% 
                    if(typeof message !== "undefined"){
                       %>
                         <span style="color: green; font-weight: bold;"><%= message %></span>
                       <%
                     }
                    %>
                    <% 
                    if(typeof error !== "undefined"){
                       %>
                         <span style="color:#f00; font-weight: bold;"><%= error %></span>
                       <%
                     }
                    %>
                </div>

                  <div class="card-body">
                    <form method="post" action="/edit-profile">

                      <input type="hidden" name="id" value="<%= userProfile._id %>">

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Username</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="basic-default-name" placeholder="product name" name="username" value="<%= userProfile.username %>"/>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Email</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="basic-default-name" placeholder="Price of the product" name="email" value="<%= userProfile.email %>"/>
                        </div>
                      </div>

                      <div class="row mb-3">
                          <label class="col-sm-2 col-form-label" for="basic-default-name">Mobile</label>
                          <div class="col-sm-10">
                            <input type="number" class="form-control" id="basic-default-name" name="mobile" value="<%= userProfile.mobile %>"/>
                          </div>
                      </div>

                      <div class="row justify-content-end">
                        <div class="col-sm-10">
                          <button type="submit" class="btn btn-primary">Edit profile</button>
                        </div>
                      </div>
                
                    </form>
                  </div>
                </div>
              </div>
              <!-- Basic with Icons -->
            </div>
          </div>
    </div>
</section>

